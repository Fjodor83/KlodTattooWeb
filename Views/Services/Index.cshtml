@{
    ViewData["Title"] = "Servizi e Prezzi";
}

<div class="container py-5">
    <!-- Header Section -->
    <div class="text-center mb-5" data-aos="fade-down">
        <h1 class="display-3 fw-bold text-uppercase mb-3" style="color: #d4af37; letter-spacing: 3px;">
            Servizi e Prezzi
        </h1>
        <p class="lead text-muted fs-4">Trasparenza e professionalità per il tuo prossimo tatuaggio</p>
        <div class="golden-underline mx-auto mt-3" style="width: 100px; height: 4px; background: linear-gradient(90deg, transparent, #d4af37, transparent);"></div>
    </div>

    <!-- Pricing Cards -->
    <div class="row g-4 mb-5">
        <!-- Small Tattoos -->
        <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
            <div class="pricing-card card h-100 shadow-lg border-0 text-center position-relative overflow-hidden" 
                 style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%); border: 2px solid rgba(212, 175, 55, 0.3) !important;">
                <!-- Popular Badge (optional) -->
                <div class="card-header border-0 py-4" style="background: rgba(212, 175, 55, 0.1);">
                    <div class="icon-wrapper mx-auto mb-3" style="width: 80px; height: 80px;">
                        <div class="rounded-circle d-flex align-items-center justify-content-center h-100" 
                             style="background: linear-gradient(135deg, #d4af37 0%, #c9a22e 100%);">
                            <i class="fas fa-bolt fa-2x text-dark"></i>
                        </div>
                    </div>
                    <h3 class="h4 text-light mb-2">Small Tattoos</h3>
                    <p class="text-muted small mb-0">Perfetto per il primo tatuaggio</p>
                </div>
                <div class="card-body p-4">
                    <div class="price-tag mb-4">
                        <h4 class="display-4 fw-bold mb-0" style="color: #d4af37;">€80 - €150</h4>
                        <p class="text-muted small">Prezzo indicativo</p>
                    </div>
                    <ul class="list-unstyled text-start mb-4">
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">Scritte e lettering</span>
                        </li>
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">Simboli minimal</span>
                        </li>
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">Piccoli disegni (max 5cm)</span>
                        </li>
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">Durata: 30-60 minuti</span>
                        </li>
                        <li class="d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">Consulenza inclusa</span>
                        </li>
                    </ul>
                    <a asp-controller="Booking" asp-action="Create" class="btn btn-outline-gold w-100 py-3 rounded-pill">
                        <i class="fas fa-calendar-check me-2"></i>Prenota Ora
                    </a>
                </div>
            </div>
        </div>

        <!-- Medium Pieces -->
        <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="200">
            <div class="pricing-card card h-100 shadow-lg border-0 text-center position-relative overflow-hidden" 
                 style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%); border: 3px solid #d4af37 !important;">
                <!-- Popular Badge -->
                <div class="position-absolute top-0 end-0 m-3" style="z-index: 10;">
                    <span class="badge rounded-pill py-2 px-3" style="background: linear-gradient(135deg, #d4af37 0%, #c9a22e 100%);">
                        <i class="fas fa-star me-1"></i>Più Popolare
                    </span>
                </div>
                <div class="card-header border-0 py-4" style="background: rgba(212, 175, 55, 0.2);">
                    <div class="icon-wrapper mx-auto mb-3" style="width: 80px; height: 80px;">
                        <div class="rounded-circle d-flex align-items-center justify-content-center h-100" 
                             style="background: linear-gradient(135deg, #d4af37 0%, #c9a22e 100%);">
                            <i class="fas fa-hand-holding-heart fa-2x text-dark"></i>
                        </div>
                    </div>
                    <h3 class="h4 text-light mb-2">Medium Pieces</h3>
                    <p class="text-muted small mb-0">Il giusto equilibrio</p>
                </div>
                <div class="card-body p-4">
                    <div class="price-tag mb-4">
                        <h4 class="display-4 fw-bold mb-0" style="color: #d4af37;">€200 - €400</h4>
                        <p class="text-muted small">Prezzo indicativo</p>
                    </div>
                    <ul class="list-unstyled text-start mb-4">
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">Avambraccio o polpaccio</span>
                        </li>
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">Spalla o scapola</span>
                        </li>
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">Design elaborato (10-15cm)</span>
                        </li>
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">Durata: 2-4 ore</span>
                        </li>
                        <li class="d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">Bozza personalizzata</span>
                        </li>
                    </ul>
                    <a asp-controller="Booking" asp-action="Create" class="btn btn-gold w-100 py-3 rounded-pill shadow-lg">
                        <i class="fas fa-calendar-check me-2"></i>Prenota Ora
                    </a>
                </div>
            </div>
        </div>

        <!-- Full Sessions -->
        <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="300">
            <div class="pricing-card card h-100 shadow-lg border-0 text-center position-relative overflow-hidden" 
                 style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%); border: 2px solid rgba(212, 175, 55, 0.3) !important;">
                <div class="card-header border-0 py-4" style="background: rgba(212, 175, 55, 0.1);">
                    <div class="icon-wrapper mx-auto mb-3" style="width: 80px; height: 80px;">
                        <div class="rounded-circle d-flex align-items-center justify-content-center h-100" 
                             style="background: linear-gradient(135deg, #d4af37 0%, #c9a22e 100%);">
                            <i class="fas fa-dragon fa-2x text-dark"></i>
                        </div>
                    </div>
                    <h3 class="h4 text-light mb-2">Full Sessions</h3>
                    <p class="text-muted small mb-0">Progetti ambiziosi</p>
                </div>
                <div class="card-body p-4">
                    <div class="price-tag mb-4">
                        <h4 class="display-4 fw-bold mb-0" style="color: #d4af37;">€500+</h4>
                        <p class="text-muted small">A seduta (6-8 ore)</p>
                    </div>
                    <ul class="list-unstyled text-start mb-4">
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">Schiena completa</span>
                        </li>
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">Manica intera (braccio/gamba)</span>
                        </li>
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">Progetti multi-sessione</span>
                        </li>
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">Durata: 6-8 ore/sessione</span>
                        </li>
                        <li class="d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">Design completamente custom</span>
                        </li>
                    </ul>
                    <a asp-controller="Booking" asp-action="Create" class="btn btn-outline-gold w-100 py-3 rounded-pill">
                        <i class="fas fa-calendar-check me-2"></i>Consulta Preventivo
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Divider -->
    <div class="row my-5">
        <div class="col-12">
            <hr class="golden-divider mx-auto" style="width: 150px; height: 3px; background: linear-gradient(90deg, transparent, #d4af37, transparent); border: none;">
        </div>
    </div>

    <!-- Process & Deposit Section -->
    <div class="row g-4 mb-5">
        <!-- How It Works -->
        <div class="col-lg-7" data-aos="fade-right">
            <div class="card shadow-lg border-0 h-100" style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);">
                <div class="card-header border-0 py-4" style="background: linear-gradient(135deg, #d4af37 0%, #c9a22e 100%);">
                    <h2 class="h4 mb-0 text-uppercase fw-bold text-dark text-center">
                        <i class="fas fa-list-ol me-2"></i>Come Funziona
                    </h2>
                </div>
                <div class="card-body p-4">
                    <!-- Step 1 -->
                    <div class="process-step d-flex mb-4 p-3 rounded" style="background: rgba(212, 175, 55, 0.05); border-left: 4px solid #d4af37;">
                        <div class="step-number me-4">
                            <div class="rounded-circle bg-warning d-flex align-items-center justify-content-center" 
                                 style="width: 50px; height: 50px; min-width: 50px;">
                                <span class="fw-bold fs-4 text-dark">1</span>
                            </div>
                        </div>
                        <div class="step-content">
                            <h5 class="text-light mb-2">
                                <i class="fas fa-comments text-warning me-2"></i>Consulenza
                            </h5>
                            <p class="text-muted mb-0">
                                Discutiamo insieme la tua idea, lo stile che preferisci e la posizione ideale. 
                                Ti fornisco consigli professionali basati sulla mia esperienza.
                            </p>
                        </div>
                    </div>

                    <!-- Step 2 -->
                    <div class="process-step d-flex mb-4 p-3 rounded" style="background: rgba(212, 175, 55, 0.05); border-left: 4px solid #d4af37;">
                        <div class="step-number me-4">
                            <div class="rounded-circle bg-warning d-flex align-items-center justify-content-center" 
                                 style="width: 50px; height: 50px; min-width: 50px;">
                                <span class="fw-bold fs-4 text-dark">2</span>
                            </div>
                        </div>
                        <div class="step-content">
                            <h5 class="text-light mb-2">
                                <i class="fas fa-pencil-ruler text-warning me-2"></i>Design Personalizzato
                            </h5>
                            <p class="text-muted mb-0">
                                Creo una bozza unica e personalizzata basata sulle tue richieste. 
                                Apportiamo modifiche fino a quando non sei completamente soddisfatto.
                            </p>
                        </div>
                    </div>

                    <!-- Step 3 -->
                    <div class="process-step d-flex mb-4 p-3 rounded" style="background: rgba(212, 175, 55, 0.05); border-left: 4px solid #d4af37;">
                        <div class="step-number me-4">
                            <div class="rounded-circle bg-warning d-flex align-items-center justify-content-center" 
                                 style="width: 50px; height: 50px; min-width: 50px;">
                                <span class="fw-bold fs-4 text-dark">3</span>
                            </div>
                        </div>
                        <div class="step-content">
                            <h5 class="text-light mb-2">
                                <i class="fas fa-calendar-check text-warning me-2"></i>Prenotazione
                            </h5>
                            <p class="text-muted mb-0">
                                Fissiamo la data dell'appuntamento. Viene richiesto un deposito di €50 
                                per confermare la prenotazione e bloccare il tuo slot.
                            </p>
                        </div>
                    </div>

                    <!-- Step 4 -->
                    <div class="process-step d-flex p-3 rounded" style="background: rgba(212, 175, 55, 0.05); border-left: 4px solid #d4af37;">
                        <div class="step-number me-4">
                            <div class="rounded-circle bg-warning d-flex align-items-center justify-content-center" 
                                 style="width: 50px; height: 50px; min-width: 50px;">
                                <span class="fw-bold fs-4 text-dark">4</span>
                            </div>
                        </div>
                        <div class="step-content">
                            <h5 class="text-light mb-2">
                                <i class="fas fa-paint-brush text-warning me-2"></i>Realizzazione
                            </h5>
                            <p class="text-muted mb-0">
                                È il momento di creare la tua opera d'arte! Lavoro con massima attenzione, 
                                igiene e professionalità per garantire un risultato perfetto.
                            </p>
                        </div>
                    </div>

                    <div class="mt-4 text-center">
                        <a asp-controller="Booking" asp-action="Create" class="btn btn-gold btn-lg px-5 py-3 rounded-pill shadow-lg">
                            <i class="fas fa-calendar-plus me-2"></i>Prenota la Tua Consulenza Gratuita
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Deposit Policy & Extra Info -->
        <div class="col-lg-5" data-aos="fade-left">
            <div class="d-flex flex-column h-100 gap-4">
                <!-- Deposit Policy -->
                <div class="card shadow-lg border-0" style="background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%); border: 2px solid #d4af37 !important;">
                    <div class="card-body p-4">
                        <h3 class="h5 mb-4 text-warning text-center">
                            <i class="fas fa-euro-sign me-2"></i>Politica Depositi
                        </h3>
                        <div class="deposit-info">
                            <div class="mb-3 p-3 rounded" style="background: rgba(212, 175, 55, 0.1);">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-money-bill-wave text-warning me-3 fs-4"></i>
                                    <div>
                                        <strong class="text-light d-block">Deposito Richiesto</strong>
                                        <span class="text-muted small">€50 non rimborsabile</span>
                                    </div>
                                </div>
                                <p class="text-muted small mb-0 ps-5">
                                    Verrà scalato dal prezzo finale del tatuaggio
                                </p>
                            </div>

                            <div class="mb-3 p-3 rounded" style="background: rgba(40, 167, 69, 0.1);">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-calendar-alt text-success me-3 fs-4"></i>
                                    <div>
                                        <strong class="text-light d-block">Modifica Appuntamento</strong>
                                        <span class="text-muted small">Possibile con preavviso</span>
                                    </div>
                                </div>
                                <p class="text-muted small mb-0 ps-5">
                                    Con almeno 48 ore di anticipo senza perdere il deposito
                                </p>
                            </div>

                            <div class="p-3 rounded" style="background: rgba(220, 53, 69, 0.1);">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-exclamation-triangle text-danger me-3 fs-4"></i>
                                    <div>
                                        <strong class="text-light d-block">No Show / Cancellazione</strong>
                                        <span class="text-muted small">Deposito non rimborsabile</span>
                                    </div>
                                </div>
                                <p class="text-muted small mb-0 ps-5">
                                    In caso di mancata presentazione o cancellazione tardiva
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Payment Methods -->
                <div class="card shadow-lg border-0" style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);">
                    <div class="card-body p-4">
                        <h3 class="h6 mb-4 text-warning text-center">
                            <i class="fas fa-credit-card me-2"></i>Metodi di Pagamento Accettati
                        </h3>
                        <div class="payment-methods text-center">
                            <div class="row g-2">
                                <div class="col-6">
                                    <div class="payment-badge p-2 rounded" style="background: rgba(212, 175, 55, 0.1);">
                                        <i class="fas fa-money-bill-wave text-warning fs-3 mb-2"></i>
                                        <p class="small text-light mb-0">Contanti</p>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="payment-badge p-2 rounded" style="background: rgba(212, 175, 55, 0.1);">
                                        <i class="fas fa-credit-card text-warning fs-3 mb-2"></i>
                                        <p class="small text-light mb-0">Carta</p>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="payment-badge p-2 rounded" style="background: rgba(212, 175, 55, 0.1);">
                                        <i class="fas fa-university text-warning fs-3 mb-2"></i>
                                        <p class="small text-light mb-0">Bonifico</p>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="payment-badge p-2 rounded" style="background: rgba(212, 175, 55, 0.1);">
                                        <i class="fab fa-paypal text-warning fs-3 mb-2"></i>
                                        <p class="small text-light mb-0">PayPal</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Guarantee -->
                <div class="card shadow-lg border-0" style="background: linear-gradient(135deg, #28a745 0%, #20923b 100%);">
                    <div class="card-body p-4 text-center">
                        <i class="fas fa-shield-alt fa-3x text-white mb-3"></i>
                        <h4 class="h6 text-white fw-bold mb-2">Garanzia di Qualità</h4>
                        <p class="small text-white mb-0">
                            Ritocchi gratuiti entro 30 giorni se necessario
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- FAQ Quick -->
    <div class="row mt-5">
        <div class="col-12" data-aos="fade-up">
            <div class="card shadow-lg border-0" style="background: linear-gradient(135deg, #d4af37 0%, #c9a22e 100%);">
                <div class="card-body p-5 text-center">
                    <h3 class="display-6 fw-bold text-dark mb-3">
                        <i class="fas fa-question-circle me-2"></i>Hai Domande sui Prezzi?
                    </h3>
                    <p class="lead text-dark mb-4">
                        Ogni tatuaggio è unico. Contattaci per un preventivo personalizzato gratuito!
                    </p>
                    <div class="d-flex justify-content-center gap-3 flex-wrap">
                        <a asp-controller="Contacts" asp-action="Index" class="btn btn-dark btn-lg px-5 py-3 rounded-pill shadow">
                            <i class="fas fa-envelope me-2"></i>Contattaci
                        </a>
                        <a asp-controller="Info" asp-action="Index" class="btn btn-outline-dark btn-lg px-5 py-3 rounded-pill shadow">
                            <i class="fas fa-info-circle me-2"></i>FAQ Complete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-gold {
        background: linear-gradient(135deg, #d4af37 0%, #c9a22e 100%);
        border: none;
        color: #000;
        font-weight: 600;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }

    .btn-gold:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(212, 175, 55, 0.4);
        color: #000;
    }

    .btn-outline-gold {
        background: transparent;
        border: 2px solid #d4af37;
        color: #d4af37;
        font-weight: 600;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }

    .btn-outline-gold:hover {
        background: linear-gradient(135deg, #d4af37 0%, #c9a22e 100%);
        border-color: #d4af37;
        color: #000;
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(212, 175, 55, 0.4);
    }

    .pricing-card {
        transition: all 0.3s ease;
    }

    .pricing-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 40px rgba(212, 175, 55, 0.3) !important;
    }

    .process-step {
        transition: all 0.3s ease;
    }

    .process-step:hover {
        background: rgba(212, 175, 55, 0.15) !important;
        transform: translateX(10px);
    }

    .payment-badge {
        transition: all 0.3s ease;
    }

    .payment-badge:hover {
        background: rgba(212, 175, 55, 0.2) !important;
        transform: scale(1.05);
    }

    @@media (max-width: 768px) {
        .display-3 {
            font-size: 2.5rem !important;
        }
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
<script>
    AOS.init({
        once: true,
        duration: 800,
        easing: 'ease-out-cubic'
    });
</script>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Page_Title"];
}

<div class="container py-5">
    <!-- Header Section -->
    <div class="text-center mb-5" data-aos="fade-down">
        <h1 class="display-3 fw-bold text-uppercase mb-3" style="color: #d4af37; letter-spacing: 3px;">
            @Localizer["Page_Title"]
        </h1>
        <p class="lead text-muted fs-4">@Localizer["Page_Subtitle"]</p>
        <div class="golden-underline mx-auto mt-3" style="width: 100px; height: 4px; background: linear-gradient(90deg, transparent, #d4af37, transparent);"></div>
    </div>

    <!-- Pricing Cards -->
    <div class="row g-4 mb-5">
        <!-- Small Tattoos -->
        <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
            <div class="pricing-card card h-100 shadow-lg border-0 text-center position-relative overflow-hidden" 
                 style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%); border: 2px solid rgba(212, 175, 55, 0.3) !important;">
                <!-- Popular Badge (optional) -->
                <div class="card-header border-0 py-4" style="background: rgba(212, 175, 55, 0.1);">
                    <div class="icon-wrapper mx-auto mb-3" style="width: 80px; height: 80px;">
                        <div class="rounded-circle d-flex align-items-center justify-content-center h-100" 
                             style="background: linear-gradient(135deg, #d4af37 0%, #c9a22e 100%);">
                            <i class="fas fa-bolt fa-2x text-dark"></i>
                        </div>
                    </div>
                    <h3 class="h4 text-light mb-2">@Localizer["Card_Small_Title"]</h3>
                    <p class="text-muted small mb-0">@Localizer["Card_Small_Subtitle"]</p>
                </div>
                <div class="card-body p-4">
                    <div class="price-tag mb-4">
                        <h4 class="display-4 fw-bold mb-0" style="color: #d4af37;">@Localizer["Card_Small_Price"]</h4>
                        <p class="text-muted small">@Localizer["Card_Small_PriceNote"]</p>
                    </div>
                    <ul class="list-unstyled text-start mb-4">
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">@Localizer["Card_Small_Feature1"]</span>
                        </li>
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">@Localizer["Card_Small_Feature2"]</span>
                        </li>
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">@Localizer["Card_Small_Feature3"]</span>
                        </li>
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">@Localizer["Card_Small_Feature4"]</span>
                        </li>
                        <li class="d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">@Localizer["Card_Small_Feature5"]</span>
                        </li>
                    </ul>
                    <a asp-controller="Booking" asp-action="Create" class="btn btn-outline-gold w-100 py-3 rounded-pill">
                        <i class="fas fa-calendar-check me-2"></i>@Localizer["Card_Small_Button"]
                    </a>
                </div>
            </div>
        </div>

        <!-- Medium Pieces -->
        <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="200">
            <div class="pricing-card card h-100 shadow-lg border-0 text-center position-relative overflow-hidden" 
                 style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%); border: 3px solid #d4af37 !important;">
                <!-- Popular Badge -->
                <div class="position-absolute top-0 end-0 m-3" style="z-index: 10;">
                    <span class="badge rounded-pill py-2 px-3" style="background: linear-gradient(135deg, #d4af37 0%, #c9a22e 100%);">
                        <i class="fas fa-star me-1"></i>@Localizer["Card_Medium_Badge"]
                    </span>
                </div>
                <div class="card-header border-0 py-4" style="background: rgba(212, 175, 55, 0.2);">
                    <div class="icon-wrapper mx-auto mb-3" style="width: 80px; height: 80px;">
                        <div class="rounded-circle d-flex align-items-center justify-content-center h-100"
                             style="background: linear-gradient(135deg, #d4af37 0%, #c9a22e 100%);">
                            <i class="fas fa-hand-holding-heart fa-2x text-dark"></i>
                        </div>
                    </div>
                    <h3 class="h4 text-light mb-2">@Localizer["Card_Medium_Title"]</h3>
                    <p class="text-muted small mb-0">@Localizer["Card_Medium_Subtitle"]</p>
                </div>
                <div class="card-body p-4">
                    <div class="price-tag mb-4">
                        <h4 class="display-4 fw-bold mb-0" style="color: #d4af37;">@Localizer["Card_Medium_Price"]</h4>
                        <p class="text-muted small">@Localizer["Card_Medium_PriceNote"]</p>
                    </div>
                    <ul class="list-unstyled text-start mb-4">
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">@Localizer["Card_Medium_Feature1"]</span>
                        </li>
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">@Localizer["Card_Medium_Feature2"]</span>
                        </li>
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">@Localizer["Card_Medium_Feature3"]</span>
                        </li>
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">@Localizer["Card_Medium_Feature4"]</span>
                        </li>
                        <li class="d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">@Localizer["Card_Medium_Feature5"]</span>
                        </li>
                    </ul>
                    <a asp-controller="Booking" asp-action="Create" class="btn btn-gold w-100 py-3 rounded-pill shadow-lg">
                        <i class="fas fa-calendar-check me-2"></i>@Localizer["Card_Medium_Button"]
                    </a>
                </div>
            </div>
        </div>

        <!-- Full Sessions -->
        <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="300">
            <div class="pricing-card card h-100 shadow-lg border-0 text-center position-relative overflow-hidden" 
                 style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%); border: 2px solid rgba(212, 175, 55, 0.3) !important;">
                <div class="card-header border-0 py-4" style="background: rgba(212, 175, 55, 0.1);">
                    <div class="icon-wrapper mx-auto mb-3" style="width: 80px; height: 80px;">
                        <div class="rounded-circle d-flex align-items-center justify-content-center h-100" 
                             style="background: linear-gradient(135deg, #d4af37 0%, #c9a22e 100%);">
                            <i class="fas fa-dragon fa-2x text-dark"></i>
                        </div>
                    </div>
                    <h3 class="h4 text-light mb-2">@Localizer["Card_Full_Title"]</h3>
                    <p class="text-muted small mb-0">@Localizer["Card_Full_Subtitle"]</p>
                </div>
                <div class="card-body p-4">
                    <div class="price-tag mb-4">
                        <h4 class="display-4 fw-bold mb-0" style="color: #d4af37;">@Localizer["Card_Full_Price"]</h4>
                        <p class="text-muted small">@Localizer["Card_Full_PriceNote"]</p>
                    </div>
                    <ul class="list-unstyled text-start mb-4">
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">@Localizer["Card_Full_Feature1"]</span>
                        </li>
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">@Localizer["Card_Full_Feature2"]</span>
                        </li>
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">@Localizer["Card_Full_Feature3"]</span>
                        </li>
                        <li class="mb-3 d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">@Localizer["Card_Full_Feature4"]</span>
                        </li>
                        <li class="d-flex align-items-start">
                            <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                            <span class="text-light">@Localizer["Card_Full_Feature5"]</span>
                        </li>
                    </ul>
                    <a asp-controller="Booking" asp-action="Create" class="btn btn-outline-gold w-100 py-3 rounded-pill">
                        <i class="fas fa-calendar-check me-2"></i>@Localizer["Card_Full_Button"]
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Divider -->
    <div class="row my-5">
        <div class="col-12">
            <hr class="golden-divider mx-auto" style="width: 150px; height: 3px; background: linear-gradient(90deg, transparent, #d4af37, transparent); border: none;">
        </div>
    </div>

    <!-- Process & Deposit Section -->
    <div class="row g-4 mb-5">
        <!-- How It Works -->
        <div class="col-lg-7" data-aos="fade-right">
            <div class="card shadow-lg border-0 h-100" style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);">
                <div class="card-header border-0 py-4" style="background: linear-gradient(135deg, #d4af37 0%, #c9a22e 100%);">
                    <h2 class="h4 mb-0 text-uppercase fw-bold text-dark text-center">
                        <i class="fas fa-list-ol me-2"></i>@Localizer["Process_Title"]
                    </h2>
                </div>
                <div class="card-body p-4">
                    <!-- Step 1 -->
                    <div class="process-step d-flex mb-4 p-3 rounded" style="background: rgba(212, 175, 55, 0.05); border-left: 4px solid #d4af37;">
                        <div class="step-number me-4">
                            <div class="rounded-circle bg-warning d-flex align-items-center justify-content-center" 
                                 style="width: 50px; height: 50px; min-width: 50px;">
                                <span class="fw-bold fs-4 text-dark">1</span>
                            </div>
                        </div>
                        <div class="step-content">
                            <h5 class="text-light mb-2">
                                <i class="fas fa-comments text-warning me-2"></i>@Localizer["Process_Step1_Title"]
                            </h5>
                            <p class="text-muted mb-0">
                                @Localizer["Process_Step1_Description"]
                            </p>
                        </div>
                    </div>

                    <!-- Step 2 -->
                    <div class="process-step d-flex mb-4 p-3 rounded" style="background: rgba(212, 175, 55, 0.05); border-left: 4px solid #d4af37;">
                        <div class="step-number me-4">
                            <div class="rounded-circle bg-warning d-flex align-items-center justify-content-center" 
                                 style="width: 50px; height: 50px; min-width: 50px;">
                                <span class="fw-bold fs-4 text-dark">2</span>
                            </div>
                        </div>
                        <div class="step-content">
                            <h5 class="text-light mb-2">
                                <i class="fas fa-pencil-ruler text-warning me-2"></i>@Localizer["Process_Step2_Title"]
                            </h5>
                            <p class="text-muted mb-0">
                                @Localizer["Process_Step2_Description"]
                            </p>
                        </div>
                    </div>

                    <!-- Step 3 -->
                    <div class="process-step d-flex mb-4 p-3 rounded" style="background: rgba(212, 175, 55, 0.05); border-left: 4px solid #d4af37;">
                        <div class="step-number me-4">
                            <div class="rounded-circle bg-warning d-flex align-items-center justify-content-center"
                                 style="width: 50px; height: 50px; min-width: 50px;">
                                <span class="fw-bold fs-4 text-dark">3</span>
                            </div>
                        </div>
                        <div class="step-content">
                            <h5 class="text-light mb-2">
                                <i class="fas fa-calendar-check text-warning me-2"></i>@Localizer["Process_Step3_Title"]
                            </h5>
                            <p class="text-muted mb-0">
                                @Localizer["Process_Step3_Description"]
                            </p>
                        </div>
                    </div>

                    <!-- Step 4 -->
                    <div class="process-step d-flex p-3 rounded" style="background: rgba(212, 175, 55, 0.05); border-left: 4px solid #d4af37;">
                        <div class="step-number me-4">
                            <div class="rounded-circle bg-warning d-flex align-items-center justify-content-center"
                                 style="width: 50px; height: 50px; min-width: 50px;">
                                <span class="fw-bold fs-4 text-dark">4</span>
                            </div>
                        </div>
                        <div class="step-content">
                            <h5 class="text-light mb-2">
                                <i class="fas fa-paint-brush text-warning me-2"></i>@Localizer["Process_Step4_Title"]
                            </h5>
                            <p class="text-muted mb-0">
                                @Localizer["Process_Step4_Description"]
                            </p>
                        </div>
                    </div>

                    <div class="mt-4 text-center">
                        <a asp-controller="Booking" asp-action="Create" class="btn btn-gold btn-lg px-5 py-3 rounded-pill shadow-lg">
                            <i class="fas fa-calendar-plus me-2"></i>@Localizer["Process_ButtonCTA"]
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Deposit Policy & Extra Info -->
        <div class="col-lg-5" data-aos="fade-left">
            <div class="d-flex flex-column h-100 gap-4">
                <!-- Deposit Policy -->
                <div class="card shadow-lg border-0" style="background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%); border: 2px solid #d4af37 !important;">
                    <div class="card-body p-4">
                        <h3 class="h5 mb-4 text-warning text-center">
                            <i class="fas fa-euro-sign me-2"></i>@Localizer["Deposit_Title"]
                        </h3>
                        <div class="deposit-info">
                            <div class="mb-3 p-3 rounded" style="background: rgba(212, 175, 55, 0.1);">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-money-bill-wave text-warning me-3 fs-4"></i>
                                    <div>
                                        <strong class="text-light d-block">@Localizer["Deposit_Required_Title"]</strong>
                                        <span class="text-muted small">@Localizer["Deposit_Required_Amount"]</span>
                                    </div>
                                </div>
                                <p class="text-muted small mb-0 ps-5">
                                    @Localizer["Deposit_Required_Note"]
                                </p>
                            </div>

                            <div class="mb-3 p-3 rounded" style="background: rgba(40, 167, 69, 0.1);">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-calendar-alt text-success me-3 fs-4"></i>
                                    <div>
                                        <strong class="text-light d-block">@Localizer["Deposit_Reschedule_Title"]</strong>
                                        <span class="text-muted small">@Localizer["Deposit_Reschedule_Subtitle"]</span>
                                    </div>
                                </div>
                                <p class="text-muted small mb-0 ps-5">
                                    @Localizer["Deposit_Reschedule_Note"]
                                </p>
                            </div>

                            <div class="p-3 rounded" style="background: rgba(220, 53, 69, 0.1);">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-exclamation-triangle text-danger me-3 fs-4"></i>
                                    <div>
                                        <strong class="text-light d-block">@Localizer["Deposit_NoShow_Title"]</strong>
                                        <span class="text-muted small">@Localizer["Deposit_NoShow_Subtitle"]</span>
                                    </div>
                                </div>
                                <p class="text-muted small mb-0 ps-5">
                                    @Localizer["Deposit_NoShow_Note"]
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Payment Methods -->
                <div class="card shadow-lg border-0" style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);">
                    <div class="card-body p-4">
                        <h3 class="h6 mb-4 text-warning text-center">
                            <i class="fas fa-credit-card me-2"></i>@Localizer["Payment_Title"]
                        </h3>
                        <div class="payment-methods text-center">
                            <div class="row g-2">
                                <div class="col-6">
                                    <div class="payment-badge p-2 rounded" style="background: rgba(212, 175, 55, 0.1);">
                                        <i class="fas fa-money-bill-wave text-warning fs-3 mb-2"></i>
                                        <p class="small text-light mb-0">@Localizer["Payment_Cash"]</p>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="payment-badge p-2 rounded" style="background: rgba(212, 175, 55, 0.1);">
                                        <i class="fas fa-credit-card text-warning fs-3 mb-2"></i>
                                        <p class="small text-light mb-0">@Localizer["Payment_Card"]</p>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="payment-badge p-2 rounded" style="background: rgba(212, 175, 55, 0.1);">
                                        <i class="fas fa-university text-warning fs-3 mb-2"></i>
                                        <p class="small text-light mb-0">@Localizer["Payment_Transfer"]</p>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="payment-badge p-2 rounded" style="background: rgba(212, 175, 55, 0.1);">
                                        <i class="fab fa-paypal text-warning fs-3 mb-2"></i>
                                        <p class="small text-light mb-0">@Localizer["Payment_PayPal"]</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Guarantee -->
                <div class="card shadow-lg border-0" style="background: linear-gradient(135deg, #28a745 0%, #20923b 100%);">
                    <div class="card-body p-4 text-center">
                        <i class="fas fa-shield-alt fa-3x text-white mb-3"></i>
                        <h4 class="h6 text-white fw-bold mb-2">@Localizer["Guarantee_Title"]</h4>
                        <p class="small text-white mb-0">
                            @Localizer["Guarantee_Description"]
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- FAQ Quick -->
    <div class="row mt-5">
        <div class="col-12" data-aos="fade-up">
            <div class="card shadow-lg border-0" style="background: linear-gradient(135deg, #d4af37 0%, #c9a22e 100%);">
                <div class="card-body p-5 text-center">
                    <h3 class="display-6 fw-bold text-dark mb-3">
                        <i class="fas fa-question-circle me-2"></i>@Localizer["FAQ_Question"]
                    </h3>
                    <p class="lead text-dark mb-4">
                        @Localizer["FAQ_Answer"]
                    </p>
                    <div class="d-flex justify-content-center gap-3 flex-wrap">
                        <a asp-controller="Contacts" asp-action="Index" class="btn btn-dark btn-lg px-5 py-3 rounded-pill shadow">
                            <i class="fas fa-envelope me-2"></i>@Localizer["FAQ_ButtonContact"]
                        </a>
                        <a asp-controller="Info" asp-action="Index" class="btn btn-outline-dark btn-lg px-5 py-3 rounded-pill shadow">
                            <i class="fas fa-info-circle me-2"></i>@Localizer["FAQ_ButtonFAQ"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-gold {
        background: linear-gradient(135deg, #d4af37 0%, #c9a22e 100%);
        border: none;
        color: #000;
        font-weight: 600;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }

    .btn-gold:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(212, 175, 55, 0.4);
        color: #000;
    }

    .btn-outline-gold {
        background: transparent;
        border: 2px solid #d4af37;
        color: #d4af37;
        font-weight: 600;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }

    .btn-outline-gold:hover {
        background: linear-gradient(135deg, #d4af37 0%, #c9a22e 100%);
        border-color: #d4af37;
        color: #000;
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(212, 175, 55, 0.4);
    }

    .pricing-card {
        transition: all 0.3s ease;
    }

    .pricing-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 40px rgba(212, 175, 55, 0.3) !important;
    }

    .process-step {
        transition: all 0.3s ease;
    }

    .process-step:hover {
        background: rgba(212, 175, 55, 0.15) !important;
        transform: translateX(10px);
    }

    .payment-badge {
        transition: all 0.3s ease;
    }

    .payment-badge:hover {
        background: rgba(212, 175, 55, 0.2) !important;
        transform: scale(1.05);
    }

    @@media (max-width: 768px) {
        .display-3 {
            font-size: 2.5rem !important;
        }
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
<script>
    AOS.init({
        once: true,
        duration: 800,
        easing: 'ease-out-cubic'
    });
</script>
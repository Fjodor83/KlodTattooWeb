@{
    ViewData["Title"] = "Kontakt";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 text-uppercase" style="color: #d4af37;">Kontakt</h1>
        <p class="lead text-muted">Besuche uns im Studio oder schreibe uns für weitere Informationen.</p>
        <div style="width: 60px; height: 3px; background-color: #d4af37; margin: 20px auto;"></div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-5">
            <div class="card bg-dark text-white border-secondary h-100 p-4">
                <h3 class="h4 mb-4" style="color: #d4af37;">Klod Tattoo Studio</h3>

                <div class="d-flex align-items-start mb-3">
                    <i class="fas fa-map-marker-alt fa-lg mt-1 me-3" style="color: #d4af37;"></i>
                    <div>
                        <h5 class="h6 mb-1">Adresse</h5>
                        <p class="text-muted mb-0">Lindenstraße 26, 63785 Obernburg am Main, Deutschland</p>
                    </div>
                </div>

                <div class="d-flex align-items-start mb-3">
                    <i class="fas fa-phone fa-lg mt-1 me-3" style="color: #d4af37;"></i>
                    <div>
                        <h5 class="h6 mb-1">Telefon</h5>
                        <p class="text-muted mb-0">+49 172 2487670</p>
                    </div>
                </div>

                <div class="d-flex align-items-start mb-3">
                    <i class="fas fa-envelope fa-lg mt-1 me-3" style="color: #d4af37;"></i>
                    <div>
                        <h5 class="h6 mb-1">E-Mail</h5>
                        <p class="text-muted mb-0">info@klodtattoo.de</p>
                    </div>
                </div>

                <div class="d-flex align-items-start mb-3">
                    <i class="fab fa-instagram fa-lg mt-1 me-3" style="color: #d4af37;"></i>
                    <div>
                        <h5 class="h6 mb-1">Social</h5>
                        <a href="https://instagram.com/klodback" target="_blank" class="text-muted text-decoration-none">@@klodback</a>
                    </div>
                </div>

                <hr class="border-secondary my-4">

                <h4 class="h5 mb-3">Öffnungszeiten</h4>
                <ul class="list-unstyled text-muted">
                    <li class="d-flex justify-content-between"><span>Mo - Fr:</span> <span>10:00 - 19:00</span></li>
                    <li class="d-flex justify-content-between"><span>Samstag:</span> <span>10:00 - 14:00</span></li>
                    <li class="d-flex justify-content-between"><span>Sonntag:</span> <span>Geschlossen</span></li>
                </ul>
            </div>
        </div>

        <div class="col-md-6 mb-5">
            <!-- Google Maps -->
            <div class="ratio ratio-1x1 border border-secondary rounded overflow-hidden">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2512.1234567890!2d9.11456!3d49.84712!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x1234567890abcdef!2sLindenstraße%2026%2C%2063785%20Obernburg%20am%20Main!5e0!3m2!1sde!2sde!4v0000000000000!5m2!1sde!2sde"
                        style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </div>
</div>
